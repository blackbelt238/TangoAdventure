<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.csci451.group8.tangocontroller.MainActivity">

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="501dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="2dp">

        <EditText
            android:id="@+id/textChange"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/changeText"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/changeText"
            android:layout_marginBottom="37dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/enterTtsView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="34dp"
            android:text="Set TTS"
            app:layout_constraintBottom_toTopOf="@+id/textChange"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/changeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/enterTtsView"
            android:layout_alignStart="@+id/enterTtsView"
            android:layout_centerVertical="true"
            android:text="Button" />

        <Button
            android:id="@+id/sttButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/enterTtsView"
            android:layout_alignStart="@+id/enterTtsView"
            android:layout_below="@+id/enterTtsView"
            android:layout_marginTop="47dp"
            android:text="STT" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
